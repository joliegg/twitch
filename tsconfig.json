{
  "compilerOptions": {
    "rootDir": "src",
    "lib": ["es2023"],
    "module": "Node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "outDir": "dist"
  },
  "include": ["./src", "./.eslintrc.cjs"],
  "typedocOptions": {
    "entryPoints": ["src/**/*"],
    "out": "docs"
  }
}